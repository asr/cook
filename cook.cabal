name:               cook
version:            0.1
build-type:         Simple
cabal-version:      >= 1.20
maintainer:         Miëtek Bak <hello@mietek.io>
stability:          experimental
homepage:           https://github.com/mietek/cook
extra-source-files: README.md
synopsis:           The λ-calculus in Haskell in four different ways
description:        A runnable version of Augustsson’s paper describing how to implement the λ-calculus in Haskell in four different ways.
tested-with:   GHC == 8.4.3
               GHC == 8.2.2
               GHC == 8.0.2
               GHC == 7.10.3

library
  hs-source-dirs: src

  build-depends:   base
                 , containers
                 , mtl
                 , pretty

  exposed-modules:   Cook.DeBruijn
                   , Cook.HOAS
                   , Cook.IdInt
                   , Cook.Lambda
                   , Cook.Misc
                   , Cook.Simple
                   , Cook.Unique

  default-language:   Haskell2010

executable cook
  hs-source-dirs:     src
  main-is:            Main.hs
  default-language:   Haskell2010
  ghc-options:        -O2 -Wall -threaded

  build-depends:   base
                 , containers
                 , cook
                 , mtl
                 , pretty
